{
  "name": "beast x kaneki-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"🎮MAIN,🔐KEYS,🤖BOT\" --prefix-colors \"cyan.bold,magenta.bold,green.bold\" \"npm run dev:main\" \"npm run dev:keys\" \"npm run dev:bot\"",
    "dev:main": "next dev -p 3001",
    "dev:keys": "cd key-system && npm run dev",
    "dev:bot": "cd discord-bot && npm install --silent && npm run dev",
    "dev:web-only": "concurrently --names \"🎮MAIN,🔐KEYS\" --prefix-colors \"cyan.bold,magenta.bold\" \"npm run dev:main\" \"npm run dev:keys\"",
    "build": "next build",
    "build:both": "npm run build && cd key-system && npm run build",
    "build:prod": "NODE_ENV=production npm run build:both",
    "start": "next start",
    "start:prod": "NODE_ENV=production npm start",
    "lint": "next lint",
    "lint:all": "npm run lint && cd key-system && npm run lint",
    "deploy-prep": "node deploy-prep.js",
    "clean": "rm -rf .next key-system/.next node_modules/.cache",
    "security-check": "npm audit && cd key-system && npm audit"
  },
  "dependencies": {
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.12",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/three": "^0.158.3",
    "autoprefixer": "^10.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
